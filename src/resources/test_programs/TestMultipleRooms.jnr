LivingRoom {
    set light to Light(pin8);
    set switch1 to Switch(pin2);
}

Kitchen {
    set light to Light(pin9);
    set switch to Switch(pin3);
}

when (run LivingRoom.switch1.isTurnedOn()){
    run LivingRoom.light.changeMode();
}

when (run Kitchen.switch.isTurnedOn()){
    run Kitchen.light.changeMode();
}
