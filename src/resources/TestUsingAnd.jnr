LivingRoom {
    set light1 to Light(pin8);
    set switch1 to Switch(pin2);
    set switch2 to Switch(pin3);
}


when (run LivingRoom.switch2.isTurnedOn() or run LivingRoom.switch1.isTurnedOn()){
    if(run LivingRoom.switch2.isTurnedOn() and run LivingRoom.switch1.isTurnedOn()){
        run print("Both pressed");
    } else {
        run LivingRoom.light1.changeMode();
    }
}
