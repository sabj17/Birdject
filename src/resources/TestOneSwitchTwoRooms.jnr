LivingRoom {
    set light to Light(pin8);
}

Kitchen {
    set light to Light(pin9);
}

set mainSwitch to Switch(pin2);



function updateLights(){
    run LivingRoom.light.changeMode();
    run Kitchen.light.changeMode();
}


when (run mainSwitch.isTurnedOn()){
    run updateLights();
    if(run LivingRoom.light.isTurnedOn()){
        run print("LivingRoom Light is on");
    } else {
        run print("LivingRoom Light is off");
    }
    if(run Kitchen.light.isTurnedOn()){
        run print("Kitchen Light is on");
    } else {
        run print("Kitchen Light is off");
    }
}

